{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "src/plugins/**/ui/*",
    "src/plugins/**/dashboard/*",
    "admin-ui",
    "vite.*.*ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/**/__tests__/**",
    "jest.config.js"
  ],
  "ts-node": {
    "files": true
  }
}
