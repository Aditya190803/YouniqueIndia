# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vendure
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vendure
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SCHEMA=public
DB_SSL=false

# Server Configuration
PORT=3000
APP_ENV=dev
NODE_ENV=development

# Authentication
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=superadmin
COOKIE_SECRET=your-secret-key-here

# Google OAuth for Social Auth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-domain.com/auth/google/callback

# Cloudinary Configuration (for asset storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
# Optional folder prefix for all assets, e.g. vendure or prod/assets
CLOUDINARY_FOLDER=younique

RESEND_API_KEY=your_resend_api_key

# Local email testing
# When using Resend free/testing, you may only send to the account email.
# Set TEST_EMAIL to your own email to simplify npm run email:test
TEST_EMAIL=your_email@example.com
# Optionally set a verified from email once your domain is verified on Resend
FROM_EMAIL="YouniqueIndia" <noreply@youniqueindia.com>

# Stellate (GraphQL edge cache) configuration (optional)
# Enable by setting both values below. Service name is the subdomain: <service>.stellate.sh
STELLATE_SERVICE_NAME=your-stellate-service
STELLATE_PURGE_API_TOKEN=your-stellate-purge-api-token
# Set to 'true' to log purge actions and keep plugin in devMode (no real purge calls when in dev)
STELLATE_DEBUG_MODE=false

# Email verification and password reset URLs
VERIFY_EMAIL_URL=http://localhost:8080/verify
PASSWORD_RESET_URL=http://localhost:8080/password-reset
CHANGE_EMAIL_URL=http://localhost:8080/verify-email-address-change 