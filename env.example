# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vendure
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vendure
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SCHEMA=public
DB_SSL=false

# Connection pool tuning (reduce if Postgres reports reserved superuser slots errors)
# DB_POOL_MAX should be <= (postgres max_connections - superuser_reserved_connections - other apps).
# Default is 5 which is safe for small environments. Set to 1-2 for very constrained managed DBs.
DB_POOL_MAX=5
# Timeouts in milliseconds
DB_CONNECTION_TIMEOUT_MS=60000
DB_IDLE_TIMEOUT_MS=30000

# Server Configuration
PORT=3000
APP_ENV=dev
NODE_ENV=development

# Authentication
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=superadmin
COOKIE_SECRET=your-secret-key-here

# Cloudinary Configuration (for asset storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
# Optional folder prefix for all assets, e.g. vendure or prod/assets
CLOUDINARY_FOLDER=younique

RESEND_API_KEY=your_resend_api_key

# Stellate (GraphQL edge cache) configuration (optional)
# Enable by setting both values below. Service name is the subdomain: <service>.stellate.sh
STELLATE_SERVICE_NAME=your-stellate-service

# Email verification and password reset URLs
VERIFY_EMAIL_URL=http://localhost:8080/verify
PASSWORD_RESET_URL=http://localhost:8080/password-reset
CHANGE_EMAIL_URL=http://localhost:8080/verify-email-address-change 

# Razorpay Credentials
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret